# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                              controllers.HomeController.index
# An example controller showing how to use dependency injection
GET         /count                         controllers.CountController.count
# An example controller showing how to write asynchronous code
GET         /message                       controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)

GET         /products                      controllers.ProductsController.list
GET         /products/new                  controllers.ProductsController.showBlank()
GET         /products/search               controllers.ProductsController.searchBlank()
GET         /products/searchresults        controllers.ProductsController.search()
GET         /products/:id                  controllers.ProductsController.show(id: Integer)
POST        /products                      controllers.ProductsController.save()

GET         /users                         controllers.UserController.list
GET         /users/new                     controllers.UserController.showBlank
GET         /users/login                   controllers.UserController.loginForm
GET         /users/login/                  controllers.UserController.login
GET         /users/:email                  controllers.UserController.show(email: String)
POST        /users                         controllers.UserController.save()